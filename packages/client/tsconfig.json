{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["ES2020", "DOM"], // DOM is needed for WebSocket API
      "declaration": true,      // Generate .d.ts files for type checking
      "outDir": "./dist",       // Output compiled JS and .d.ts to dist
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }